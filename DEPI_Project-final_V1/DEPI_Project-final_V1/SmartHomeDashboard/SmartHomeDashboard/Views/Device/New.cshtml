@model Device
@{
	ViewData["Title"] = "New";
}


<div class="modal fade" id="addDeviceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" asp-controller="Device" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add New Device</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="RoomId" />

                    <div class="mb-3">
                        <label class="form-label">Device Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter device name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Device Type</label>
                        <select asp-for="deviceType" class="form-select">
                            @foreach (var type in Enum.GetValues(typeof(SmartHomeDashboard.Models.DeviceType)))
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Add to Favorites</label>
                        <select asp-for="Favourite" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Device</button>
                </div>
            </form>
        </div>
    </div>
</div>

