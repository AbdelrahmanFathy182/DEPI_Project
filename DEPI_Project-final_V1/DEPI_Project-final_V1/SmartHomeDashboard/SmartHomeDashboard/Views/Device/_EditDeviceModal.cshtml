@model SmartHomeDashboard.Models.Device

<div class="modal fade" id="editDeviceModal-@Model.Id" tabindex="-1" aria-labelledby="editDeviceModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Edit" asp-controller="Device" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="editDeviceModalLabel-@Model.Id">Edit Device</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <input asp-for="@Model.RoomId" type="hidden" />
                    <div class="mb-3">
                        <label class="form-label">Device Name<span style="color: red;">*</span></label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Device Type<span style="color: red;">*</span></label>
                        <select asp-for="deviceType" class="form-select">
                            @foreach (var type in Enum.GetValues(typeof(SmartHomeDashboard.Models.DeviceType)))
                            {
                                <option value="@type" selected="@(type.Equals(Model.deviceType))">@type</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Device Intensity<span style="color: red;">*</span></label>
                        <input asp-for="Value" class="form-control" min="0" max="100" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select asp-for="IsActive" class="form-select">
                            <option value="true">On</option>
                            <option value="false">Off</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Add to Favorites</label>
                        <select asp-for="Favourite" class="form-select">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
