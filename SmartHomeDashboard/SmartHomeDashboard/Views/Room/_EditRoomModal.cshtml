@model SmartHomeDashboard.Models.Room

<div class="modal fade" id="editRoomModal-@Model.Id" tabindex="-1" aria-labelledby="editRoomModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Edit" asp-controller="Room" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="editRoomModalLabel-@Model.Id">Edit Room</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <input asp-for="@Model.AccountId" type="hidden" />

                    <div class="mb-3">
                        <label class="form-label">Room Name<span style="color: red;">*</span></label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Room Type<span style="color: red;">*</span></label>
                        <select asp-for="Type" class="form-select">
                            @foreach (var type in Enum.GetValues(typeof(SmartHomeDashboard.Models.RoomType)))
                            {
                                <option value="@type" selected="@(type.Equals(Model.Type))">@type</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
