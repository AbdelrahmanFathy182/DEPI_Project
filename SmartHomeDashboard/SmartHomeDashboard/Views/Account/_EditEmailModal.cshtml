@model Account
<div class="modal fade" id="editEmailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditEmail" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Edit Email Address</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input asp-for="Id" type="hidden" value="@Model.Id"/>

                    <div class="mb-3">
                        <label class="form-label">New Email<span style="color: red;">*</span></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter new email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>    
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

